@namespace Survey.Client.Pages.App.Util
<svg height="100" width="100">
    <circle cx="50%" cy="50%" r="@(radiusPropertion*0.7*proportion+konst)" stroke="black" 
    fill="@color" />
    <text x="50%" y="50%" text-anchor="middle"
        alignment-baseline="central" 
        fill="#fff"
        font-size="@(radiusPropertion*proportion+konst)px">@radiusPropertion</text>
</svg> 
@code {
    [Parameter]
    public int radiusPropertion { get; set; } = 1;
    [Parameter]
    public string color { get; set; } = "#a0a";

    public int proportion = 10;
    public int konst = 10;
}
