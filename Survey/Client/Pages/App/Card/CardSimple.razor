<div class="card" style="width: 18rem;">
    <AuthorizeView Roles="Admin, BoardAdmin">
        <Authorized>
            <div class="float-right">
                <button @onclick="Delete" class="close" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
        </Authorized>
    </AuthorizeView>
    <div class="card-body">
        <h5 class="card-title">@CardModel.CardModel.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">@(CardModel.CardModel.Text.ToUpper())</h6>
        <p class="card-text">@CardModel.CardModel.Text</p>
        <RadzenRating Stars="7" Change=@(args => OnChange.InvokeAsync((args,CardModel.CardModel))) Value="@(CardModel.RatingValue ?? 0)" />
    </div>


    <div class="d-flex justify-content-center">
        <EditForm Model="ReplyModel" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />

            <div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i></button>
            </div>

            @*<input type="text" @bind="Reply" class="form-control" placeholder="Comment" />*@
            <InputText @bind-Value="@ReplyModel.Text" class="form-control" id="cardModel.Title"></InputText>
            <ValidationMessage For="@(() => ReplyModel.Text)" />


            <ReplyPage Replies="@(CardModel.CardModel.Replies)" AddReply="OnAddReply"></ReplyPage>

        </EditForm>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
    </div>
</div>


